package de.rwth.montisim.agent.strategy;

component BrakeGasInputMapper {
	ports
		in Q(-1:1)^{2} old_actions,
		out Q(-1:1)^{3} new_actions;

	implementation Math {
		if old_actions(1) < 0
			new_actions(1) = 0;
			new_actions(2) = 2*(-old_actions(1)) - 1;
		else
			new_actions(1) = 2*old_actions(1) - 1;
			new_actions(2) = 0;
		end

		new_actions(3) = old_actions(2);
	}
}
