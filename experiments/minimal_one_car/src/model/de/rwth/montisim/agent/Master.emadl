package de.rwth.montisim.agent;

import de.rwth.montisim.agent.network.AutopilotQNet;
import de.rwth.montisim.agent.strategy.BrakeGasInputMapper;

component Master {
	ports
		in Q^{25} state,
		in B terminated,
		out Q(-1:1)^{3} action,
		out B terminate;

	instance AutopilotQNet qnet;
	instance BrakeGasInputMapper inputMapper;

	connect state -> qnet.state;
	connect qnet.action -> inputMapper.old_actions;
	connect inputMapper.new_actions -> action;
	connect terminated -> terminate;
}