package de.rwth.supermario.haller.environment;


component ObstacleWatcher {
    ports
    
        in Z ObstacleDistX,
        in Z ObstacleDistY,
        
        out Z inJumpRange;

    implementation Math {
        Z jumpRangeX = 75;
        Z jumpRangeY =  30;
        
        if((abs(ObstacleDistX) < jumpRangeX) && (abs(ObstacleDistY) < jumpRangeY) && (ObstacleDistX != -1))
            inJumpRange = 1;
        else
            inJumpRange = 0;
        end
        
    }
}