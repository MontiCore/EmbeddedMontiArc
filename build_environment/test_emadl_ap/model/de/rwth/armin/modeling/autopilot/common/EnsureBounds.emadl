package de.rwth.armin.modeling.autopilot.common;

component EnsureBounds {
  port
    in Q lowerBound,
    in Q upperBound,
    in Q input_data,
    out Q output_data;

  implementation Math {
    if input_data < lowerBound
      output_data = lowerBound;
    elseif input_data > upperBound
      output_data = upperBound;
    else
      output_data = input_data;
    end
  }
}
