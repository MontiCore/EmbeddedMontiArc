<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- == PROJECT COORDINATES =============================================== -->

    <parent>
        <groupId>de.monticore.lang.monticar.sol</groupId>
        <artifactId>sol</artifactId>
        <version>2019.06.25-SNAPSHOT</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>

    <artifactId>code-coverage</artifactId>

    <!-- == PROJECT PROPERTIES ================================================ -->

    <properties>

        <!-- .. Libraries ..................................................... -->

        <!-- .. Plugins ....................................................... -->

        <!-- .. Classifiers ................................................... -->

        <!-- .. Misc .......................................................... -->

        <!-- .. Resources ..................................................... -->

    </properties>

    <!-- == PROJECT METAINFORMATION =========================================== -->

    <name>Sol - Tests - Code Coverage</name>

    <!-- == PROJECT DEPENDENCIES ============================================== -->

    <dependencies>

        <!-- .. Modules ................................................... -->

        <dependency>
            <groupId>de.monticore.lang.monticar.sol</groupId>
            <artifactId>runtime-language-server</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>de.monticore.lang.monticar.sol</groupId>
            <artifactId>plugin-common</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>de.monticore.lang.monticar.sol</groupId>
            <artifactId>plugin-language-server</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>de.monticore.lang.monticar.sol</groupId>
            <artifactId>plugin-language-client</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>de.monticore.lang.monticar.sol</groupId>
            <artifactId>grammar-environment</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>de.monticore.lang.monticar.sol</groupId>
            <artifactId>plugin-environment</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- .. Libraries ................................................. -->

        <!-- .. Language .................................................. -->

        <!-- .. Test Libraries ............................................ -->

    </dependencies>

    <!-- == PROJECT BUILD SETTINGS ============================================ -->

    <build>
        <plugins>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${jacoco-plugin.version}</version>
                <executions>
                    <execution>
                        <id>Code Coverage: Report Aggregation</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report-aggregate</goal>
                        </goals>
                        <configuration>
                            <title>Sol</title>
                            <outputDirectory>${rootDir}/public/pages/jacoco</outputDirectory>
                            <excludes>
                                <exclude>**/*Module.class</exclude>
                                <exclude>**/HelpMojo.class</exclude>
                                <exclude>**/_*/**/*.class</exclude> <!-- Disable Generated Sources -->
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>yarn run coverage</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>yarn</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>coverage</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>


    <!-- == PROJECT REPORTING ================================================= -->

    <reporting>
        <plugins>

        </plugins>
    </reporting>

    <!-- == PROJECT DISTRIBUTION ============================================== -->

</project>