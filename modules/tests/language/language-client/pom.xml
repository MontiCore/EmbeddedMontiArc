<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- == PROJECT COORDINATES =============================================== -->

    <parent>
        <groupId>de.monticore.lang.monticar.sol</groupId>
        <artifactId>tests-language</artifactId>
        <version>2019.12.12-SNAPSHOT</version>
    </parent>

    <artifactId>tests-language-lc</artifactId>

    <!-- == PROJECT PROPERTIES ================================================ -->

    <properties>

        <!-- .. Libraries ..................................................... -->

        <!-- .. Plugins ....................................................... -->

        <!-- .. Classifiers ................................................... -->

        <!-- .. Misc .......................................................... -->

        <!-- .. Resources ..................................................... -->

    </properties>

    <!-- == PROJECT METAINFORMATION =========================================== -->

    <name>Sol - Tests - Language - Language Client</name>

    <!-- == PROJECT DEPENDENCIES ============================================== -->

    <dependencies>

        <!-- .. Modules ................................................... -->

        <dependency>
            <groupId>de.monticore.lang.monticar.sol</groupId>
            <artifactId>tests-language-l</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>de.monticore.lang.monticar.sol</groupId>
            <artifactId>tests-language-ls</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- .. Libraries ................................................. -->

        <!-- .. Language .................................................. -->

        <!-- .. Test Libraries ............................................ -->

    </dependencies>

    <!-- == PROJECT BUILD SETTINGS ============================================ -->

    <build>
        <plugins>

            <plugin>
                <groupId>de.monticore.lang.monticar.sol</groupId>
                <artifactId>plugin-language-client</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <rootModel>de.monticore.lang.monticar.sol.tests.lc.EmbeddedMontiArcMath</rootModel>
                            <grammar>de.monticore.lang.embeddedmontiarc.EmbeddedMontiArcMath</grammar>
                            <extension>emam</extension>
                            <grammarModule>tests-language-l</grammarModule>
                            <serverArtifact>tests-language-ls:tests-language-ls-${project.version}.jar</serverArtifact>
                            <excludedKeywords>
                                <excludedKeyword>script</excludedKeyword>
                                <excludedKeyword>Port</excludedKeyword>
                                <excludedKeyword>oo</excludedKeyword>
                            </excludedKeywords>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>


    <!-- == PROJECT REPORTING ================================================= -->

    <reporting>
        <plugins>

        </plugins>
    </reporting>

    <!-- == PROJECT DISTRIBUTION ============================================== -->

</project>
