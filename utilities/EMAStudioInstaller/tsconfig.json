{
  "extends": "./ide/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@emastudio/core": ["packages/core/src/*"],
      "@emastudio/markers": ["packages/markers/src/*"],
      "@emastudio/monaco": ["packages/monaco/src/*"],
      "@emastudio/process": ["packages/process/src/*"],
      "@emastudio/workspace": ["packages/workspace/src/*"],
      "@emastudio/dashboard": ["extensions/dashboard/src/*"],
