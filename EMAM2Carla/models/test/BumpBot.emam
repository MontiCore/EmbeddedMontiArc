package test;
import test.structures.*;

component BumpBot{

	port 	out Ego_Vehicle test,
		in Z collision_actor_id;

	implementation Math{
		test.throttle = 1.0;
		test.brake = 0.0;
		test.hand_brake = false;
		test.reverse = false;
		test.gear = 1;
		test.manual_gear_shift = false;		

		if collision_actor_id > 0 //if a collision occurred drive into the other direction
			test.reverse = true;
		end
	}
}
