<?xml version="1.0" encoding="UTF-8" ?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>de.monticore.lang.monticar</groupId>
  <artifactId>emadl-lsp-exec</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>emadl-lsp-exec</name>

  <properties>
    <!-- Dependency versions -->
    <emam.version>0.1.13-SNAPSHOT</emam.version>
    <monticore-lsp-commons.version>1.2-SNAPSHOT</monticore-lsp-commons.version>
    <ema-lsp.version>1.2-SNAPSHOT</ema-lsp.version>
    <embedded-montiarc-deeplearning.version>0.2.10-SNAPSHOT</embedded-montiarc-deeplearning.version>
    <cnn-train.version>0.3.8-SNAPSHOT</cnn-train.version>
    <cnn-arch.version>0.3.3-SNAPSHOT</cnn-arch.version>

    <!-- misc -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>

  <dependencies>
    <dependency>
      <groupId>de.monticore.lang.monticar</groupId>
      <artifactId>embedded-montiarc-math</artifactId>
      <version>${emam.version}</version>
    </dependency>
    <dependency>
      <groupId>de.monticore.util</groupId>
      <artifactId>monticore-lsp-commons</artifactId>
      <version>${monticore-lsp-commons.version}</version>
    </dependency>
    <!--
    <dependency>
      <groupId>de.monticore.lang.monticar</groupId>
      <artifactId>ema-lsp</artifactId>
      <version>${ema-lsp.version}</version>
    </dependency>
    -->
    <dependency>
      <file>ema-lsp-1.3-SNAPSHOT.jar</file>
      <groupId>de.monticore.lang.monticar</groupId>
      <artifactId>ema-lsp</artifactId>
      <version>1.3-SNAPSHOT</version>
      <packaging>jar</packaging>
    </dependency>
    <dependency>
        <groupId>de.monticore.lang.monticar</groupId>
        <artifactId>embedded-montiarc-deeplearning</artifactId>
        <version>${embedded-montiarc-deeplearning.version}</version>
    </dependency>
    <dependency>
        <groupId>de.monticore.lang.monticar</groupId>
        <artifactId>cnn-train</artifactId>
        <version>${cnn-train.version}</version>
    </dependency>
    <dependency>
        <groupId>de.monticore.lang.monticar</groupId>
        <artifactId>cnn-arch</artifactId>
        <version>${cnn-arch.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <configuration>
          <mainClass>de.monticore.lang.embeddedmontiarc.embeddedmontiarcdl.lsp.EmadlLspServer</mainClass>
          <arguments>
            <argument>-p</argument>
            <argument>0</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>