package de.rwth.supermario.haller.tools;

component OrRelation_3 {
    ports
        in Z input[3],
        out Z output;

    implementation Math {
        Z sum = 0;
        for i = 1:3
            sum = sum + input(i);
        end
        
        if(sum > 0)
            output = 1;
        else
            output = 0;
        end
        
    }
    
}
