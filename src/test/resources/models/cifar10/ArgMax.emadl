package cifar10;

component ArgMax<Z(1:oo) n = 2>{
    ports in Q^{n} inputVector,
          out Z(0:oo) maxIndex;

    implementation Math{
         maxIndex = 0;
         Q maxValue = inputVector(0);

         for i = 1:(n - 1)
            if inputVector(i) > maxValue
                maxIndex = i;
                maxValue = inputVector(i);
            end
         end
    }

}