package test.custom;

component PacmanPositionStateSaver{
    port in B needsInit,
         in N positionX,
         in N positionY,
         out N pacmanPositionX,
         out N pacmanPositionY;

    implementation Math{
        if (needsInit)
            pacmanPositionX = 0;
            pacmanPositionY = 0;
        else
            pacmanPositionX = positionX;
            pacmanPositionY = positionY;
        end
    }
}