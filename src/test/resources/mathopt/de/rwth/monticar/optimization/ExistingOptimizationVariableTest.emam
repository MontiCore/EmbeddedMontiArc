package de.rwth.monticar.optimization;

component ExistingOptimizationVariableTest{

    ports out Q xOut1,
          out Q^{3,3} aOut2,
          out Q bOut2,
          out Q^{3,3} aOut3,
          out Q cOut3;


    implementation Math{
        // 1. scalar
        Q x = 3;
        minimize(x)
            2 * x + 1;
        subject to
            -1 <= x <= 1;
        end
        xOut1 = x;

        // 2. matrix
        Q^{3,3} a = zeros(3,3);
        Q b = minimize(a)
            a(1, 1) * a(2, 2) * a(3, 3);
        subject to
            -10 <= a <= 10;
        end
        aOut2 = a;
        bOut2 = b;

        // 3. substituted
        Q^{3,3} ainc = a + 1;
        Q c = minimize(a)
            ainc(1, 1) * ainc(2, 2) * ainc(3, 3);
        subject to
            -20 <= a <= 20;
        end
        aOut3 = a;
        cOut3 = c;
    }
}