package mnistvae;

component Encoder{
    ports in Q(-oo:oo)^{1,28,28} data,
          out Q(-oo:oo)^{8} z;

    implementation CNN {
        data ->
        FullyConnected(units=400) ->
        Relu() ->
        Dropout() ->
        FullyConnected(units=400) ->
        Relu() ->
        Dropout() ->
        FullyConnected(units=16) ->
        Split(n=2) ->
        (
            [0]  /* mean */
        |
            [1] /* log variance squared */
        ) ->
        Reparameterize() ->
        z;
    }
}