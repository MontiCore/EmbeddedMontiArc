package topology.agent.network;

component TopoCritic {
    ports
        in Q(0:oo)^{1} state,
        in Q(0:1)^{7} action,
        out Q(-oo:oo)^{1} qvalues;

    implementation CNN {
        (
            state ->
            FullyConnected(units=300) ->
            Relu() ->
            FullyConnected(units=600)
        |
            action ->
            FullyConnected(units=600)
        )->
        Add() ->
        FullyConnected(units=600) ->
        Relu() ->
        FullyConnected(units=1) ->
        qvalues;
    }

}